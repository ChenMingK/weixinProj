.text{
  margin-bottom: 25rpx;
}
.page{
  background-color: #eeeeee;
  padding: 10rpx 10rpx 10rpx 10rpx;
  height: 1334rpx;
}
.top{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  align-items: center;
}
.top image {
  border-radius: 50%;
}
.head{
  width: 200rpx;
  height: 200rpx;
  margin: 30rpx;
}
.user{
  font-weight: bold;
  font-size: 110%;
}
.pay{
  height: 50rpx;
  display: flex;
  align-items: center;
  padding-top: 30rpx;
}
.icon{
  height: 50rpx;
  width: 60rpx;
  font-size: 90%;
}
.tags{
  display: flex;
  align-items: center;
}
.i{
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 90%;
}
.i image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.middle{
  background-color: white;
  border-radius: 10rpx;
}
.topic_container{
  display: flex;
  align-items: center;
  height: 110rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.topic{
  color: #0064FF;
  font-weight: bold;
  font-size: 110%;
  padding-left: 20rpx;
  border-left: 5rpx solid #0064FF;
}
.middle .content{
  color: rgb(110, 110, 110);
  width: 750rpx;
  overflow-y: scroll;
  height: 450rpx;
  word-break: break-all;
  padding: 20rpx;
  box-sizing: border-box;
}
.content text {
  width: 100%;
}

.bottom{
  width: 100%;
  height: 100rpx;
  background-color: #0064FF;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.bottom view{
  width: 100%;
  text-align: center;
}