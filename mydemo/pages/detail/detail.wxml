<view class='page'>
  <view class='top'>
    <image src='{{item.avatarUrl}}' class='head'></image>
    <view class='user'>
      <text>{{item.publish_user}}</text>
    </view>
    <view class='pay text'>
      <text>奖励</text>
      <image src='/images/home/water.png' class='icon'></image>
      {{item.waterPoints}}
    </view>
    <view class='tags text'>
      <view class='i'>
        <image src='/images/position.png'></image>
        <view>{{item.tags[1]}}</view>
      </view>
      <view class='i'>
        <image src='/images/time.png'></image>
        <view>{{item.tags[2]}}</view>
      </view><view class='i'>
        <image src='/images/warning.png'></image>
        <view>{{item.tags[3]}}</view>
      </view>
    </view>
  </view>

  <view class='middle'>
    <view class='topic_container'>
      <view class='topic'>
        <text>内容描述</text>
      </view>
    </view>
      <view class='content'>
        <text>{{item.content}}</text>
      </view>
    </view>
  </view>

<view class='bottom' bindtap='accept'>
  <view>接受订单</view>
</view>