.topic{
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #dddddd;
  padding-left: 20rpx;
}
.textarea-wrapper {
  width: 100%;
  height: 150rpx;
  /* background-color: #dddddd; */
  border: 2px dotted #ccc;
  box-sizing: border-box;
}
.section textarea {
  width: 100%;
  height: 100%;
  padding: 10rpx 20rpx;
}
.section-extra {
  width: 100%;
  height: 160rpx;
}
.picker_container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eeeeee;
  padding-left: 20rpx;
}
.picker{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.picker image{
  width: 38rpx;
  height: 38rpx;
}
.slider_container{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  border-bottom: 1px solid #eeeeee;
}
.slider{
  width: 88%;
}
button {
  font-size: 40rpx;
  background-color: rgba(30,144,255,0.3);
  color: rgb(47, 125, 228);
  box-shadow:  5rpx 5rpx 5rpx rgba(30,144,255,0.3);
  
}

.button1{
  margin-top: 40rpx;
}
.button2{
  margin-top: 10rpx;
}